#!/bin/sh

if [ "$TRAVIS" = "true" ]; then
    if [ "$TRAVIS_BRANCH" = "master" ]; then
        if [ "$TRAVIS_PULL_REQUEST" != "false" ]; then
            # inside this git repo we'll pretend to be a new user
            git config user.name "$USER_NAME"
            git config user.email "$USER_MAIL"

            gulp release
        fi
    fi
fi